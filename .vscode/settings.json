{
  "files.exclude": {
    "node_modules": false,
    "package.json": false,
    "**/package-lock.json": false,
    "eslint.config.mjs": false,
    ".vscode": false,
    ".git": false,
    ".gitignore": false,
    ".htmlvalidate.json": false,
    "jsconfig.json": false,
    "prettier.config.mjs": false,
    "stylelint.config.mjs": false
  },
  "cSpell.words": [
    "Avenir",
    "frontmatter",
    "grayscale",
    "ianvs",
    "isnotdefined",
    "mavrin",
    "rgba",
    "tseslint",
    "vfile"
  ],
  "cmake.options.statusBarVisibility": "visible",
  "css.validate": false, // These should be workspace settings
  "less.validate": false,
  "scss.validate": false,
  "typescript.validate.enable": true, // Disable TypeScript's built-in checker
  "javascript.validate.enable": false
}
